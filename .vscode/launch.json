{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "urlFilter": "https://localhost:3000/*",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "console": "internalConsole",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${fileDirname}"
        }
    ]
}